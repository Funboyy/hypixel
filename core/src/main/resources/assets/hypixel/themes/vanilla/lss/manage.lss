.popup-container {
  width: 230 !important;
  space-between-entries: 6 !important;

  .popup-title {
    text-color: white;
    margin-bottom: 4;
  }

  .popup-button-container {
    margin-top: 4;
  }

  .wrapper {
    height: fit-content;
    margin: 0;
    width: fit-content;
    space-between-entries: 2;
  }

  .entry {
    left: 0;
    top: 0;
    width: 100%;
    height: fit-content;
    layout: spread;

    .label {
      margin: 2 5 2 5;
    }

    .input {
      top: 0;
      left: 0;
      height: 20;
      width: fit-content;
      margin: 2 5 2 5;

      alignment-y: center;
    }

    DropdownPopupWidget {
      max-height: 50;
    }
  }
}
