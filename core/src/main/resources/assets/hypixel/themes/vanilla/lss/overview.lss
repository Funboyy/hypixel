.fast-play-container {
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;

  Scroll {
    width: 90%;
    top: 0;
    bottom: 0;
    margin-top: 5;
    margin-bottom: 5;
    left: 50%;
    alignment-x: center;

    .fast-play-list {
      left: 0;
      top: 0;
      height: fit-content;
      space-between-entries: 2;
      selectable: true;
    }

    Scrollbar {
      left: 0;
      top: 0;
      width: 5;
      height: 100%;
      margin-left: 5;
    }
  }
}

FastPlay {
  width: 100%;
  height: 24;
  padding: 1;

  .icon {
    left: 4;
    top: 2;
    width: 16;
    height: width;
    clickable: true;

    margin-top: 2;
  }

  .mode {
    left: 22;
    top: 2;
  }

  .key {
    left: 22;
    top: 13;
  }

  &:selected {
    padding: 0;
    border: 1 gray;
    background-color: black;
  }

  &.disabled {
    .icon {
      opacity: 0.5;
    }

    .mode {
      opacity: 0.5;
    }

    .key {
      opacity: 0.5;
    }
  }
}

.button-menu {
  width: 90%;
  height: 20;
  left: 50%;
  alignment-x: center;
  bottom: 5;
  layout: fill;
  space-between-entries: 8;
  margin-bottom: 5;
}